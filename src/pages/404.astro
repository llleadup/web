---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
---

<Layout title="dashboard">
  <Header />
  <div class="grid place-items-center min-h-[80svh]">
    <div class="flex flex-col gap-8 items-center">
      <span class="block text-8xl font-extrabold">404</span>
      <h1 class="text-3xl">Oops, there is no page you are looking for</h1>
      <a
        href="/"
        class="flex items-center justify-center text-sm px-3 font-semibold py-2 rounded-lg transition-all bg-primary text-white max-w-fit"
        >Go Home</a
      >
    </div>
  </div>
</Layout>
